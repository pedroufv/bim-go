{% extends 'base.html.twig' %}

{% block body %}
    <h1>Endereco list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Logradouro</th>
                <th>Numero</th>
                <th>Complemento</th>
                <th>Bairro</th>
                <th>Cep</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for endereco in enderecos %}
            <tr>
                <td><a href="{{ path('endereco_show', { 'id': endereco.id }) }}">{{ endereco.id }}</a></td>
                <td>{{ endereco.logradouro }}</td>
                <td>{{ endereco.numero }}</td>
                <td>{{ endereco.complemento }}</td>
                <td>{{ endereco.bairro }}</td>
                <td>{{ endereco.cep }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('endereco_show', { 'id': endereco.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('endereco_edit', { 'id': endereco.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('endereco_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
