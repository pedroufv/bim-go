{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pagamento</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pagamento.id }}</td>
            </tr>
            <tr>
                <th>Quantidade</th>
                <td>{{ pagamento.quantidade }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ pagamento.valor }}</td>
            </tr>
            <tr>
                <th>Datainicio</th>
                <td>{% if pagamento.datainicio %}{{ pagamento.datainicio|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datafim</th>
                <td>{% if pagamento.datafim %}{{ pagamento.datafim|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pagamento_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pagamento_edit', { 'id': pagamento.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
