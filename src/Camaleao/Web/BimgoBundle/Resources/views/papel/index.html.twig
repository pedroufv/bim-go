{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h2>Papéis</h2>
                {% if pagination|length <= 0 %}
                <span>Nenhum papel encontrada.</span>
                {% else %}
                <table>
                    <thead>
                    <tr>
                        {# sorting of properties based on query components #}
                        <th>{{ knp_pagination_sortable(pagination, 'ID', 'a.id') }}</th>
                        <th{% if pagination.isSorted('a.nome') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nome', 'a.nome') }}</th>
                        <th{% if pagination.isSorted('a.descricao') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Descrição', 'a.descricao') }}</th>
                        <th class="blue-text">Ações</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for papel in pagination %}
                        <tr>
                            <td><a href="{{ path('papel_show', { 'id': papel.id }) }}">{{ papel.id }}</a></td>
                            <td>{{ papel.nome }}</td>
                            <td>{{ papel.descricao }}</td>
                            <td>
                                <a href="{{ path('papel_show', { 'id': papel.id }) }}"class="waves-effect waves-light btn blue"><i class="material-icons left">play_arrow</i>Exibir</a>
                                <a href="{{ path('papel_edit', { 'id': papel.id }) }}"class="waves-effect waves-light btn blue"><i class="material-icons left">edit</i>Editar</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation center">
                    {{ knp_pagination_render(pagination) }}
                </div>
                {% endif %}
            </div> <!-- end col s12 -->
        </div> <!-- end row -->
    </div> <!-- end container -->
    <div class="fixed-action-btn" style="bottom:45px; right:24px;">
        <a class="waves-effect waves-light btn btn-floating btn-large orange darken-1" href="{{ path('papel_new') }}">
            <i class="large material-icons">add</i>
        </a>
    </div>
{% endblock %}
