{% extends 'CamaleaoBimgoSiteBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Promoção: {{ promocao.nome }}</h2>
        <div class="row">
            <div class="col s6">
                <img src="{{ getImgS3(promocao.canonico, 'png', 'promocao') }}" class="responsive-img">
            </div>
            <div class="col s6">
                <p><strong>Nome:</strong> {{ promocao.nome }}</p>
                <p><strong>Descrição:</strong>  {{ promocao.descricao }}</p>
                <p><strong>Data Início:</strong>  {{ promocao.dataInicio|date("d/m/Y")  }}</p>
                <p><strong>Data Fim:</strong>  {{ promocao.dataFim|date("d/m/Y")  }}</p>
                <p><strong>Instituição:</strong>  {{ promocao.instituicao.nomeFantasia }}</p>
            </div>
        </div>
    </div>
{% endblock %}
