{% extends 'CamaleaoBimgoSiteBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="section">
            <div class="row">
                <form method="get" action="" class="form-inline" role="search">
                    <div class="form-group">
                        <input type="text" name="query" value="{{ app.request.get('query') }}" class="form-control" placeholder="{{'Search'|trans}}" required />
                    </div>
                    <input type="submit" value="{{ 'Search'|trans }}" class="btn btn-default">
                </form>
                {% for instituicao in pagination %}
                <div class="card col s12 m4" style="height: 350px">
                    <div class="icon-block">
                        <h3 class="center">
                            <a href="{{ path('site_instituicao_show', { 'id': instituicao.id }) }}">
                                <img src="{{ logotipo(instituicao.id, instituicao.nomefantasia) }}" class="responsive-img">
                            </a>
                        </h3>
                        <h5 class="center"><a href="" class="black-text">{{ instituicao.nomefantasia }}</a></h5>
                        <p><a href="" class="black-text">{{ instituicao.descricao }}</a></p>
                    </div>
                </div>
                {% endfor %}
                <div class="navigation center">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}