{% extends 'CamaleaoBimgoAdminBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="section">
            <div class="row">
                <h2>Encontre empresas por segmento</h2>
                {% for segmento in pagination %}
                <div class="col s12 m4">
                        <div class="icon-block">
                            <h3 class="center"><a href="{{ path('site_instituicao_segmento', {'id': segmento.id}) }}"><i class="blue-text fa {{ segmento.icone.nome }}"></i></a></h3>
                            <h5 class="center"><a href="{{ path('site_instituicao_segmento', {'id': segmento.id}) }}" class="black-text">{{ segmento.nome }}</a></h5>
                            <p><a href="{{ path('site_instituicao_segmento', {'id': segmento.id}) }}" class="black-text">{{ segmento.descricao }}</a></p>
                        </div>
                </div>
                {% endfor %}
            </div>
            <div class="navigation center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
